@model ICollection<CourseListingServiceModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Trainer</th>
        </tr>
        @foreach (var course in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id">@course.Name</a>
                </td>
                <td>@course.StartDate.ToString("dd-MMMM-yyyy")</td>
                <td>@course.EndDate.ToString("dd-MMMM-yyyy")</td>
                <td>@course.TrainerName</td>
            </tr>
        }
    </table>
</div>