@model PartAddViewModel

<h1>Add Part</h1>

<form action="/part/add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div>
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="form-text text-danger"></span>
    </div>
    <div>
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="form-text text-danger"></span>
    </div>
    <div>
        <label asp-for="SupplierId">Choose Supplier</label>
        <select asp-for="SupplierId">
            <option disabled selected> -- select an option -- </option>
            @foreach (var supplier in Model.Suppliers)
            {
                <option value="@supplier.Id">@supplier.Name</option>
            }
        </select>
        <span asp-validation-for="SupplierId" class="form-text text-danger"></span>
    </div>
    <div>
        <input class="btn btn-success" type="submit" value="Add Part" />
    </div>
</form>