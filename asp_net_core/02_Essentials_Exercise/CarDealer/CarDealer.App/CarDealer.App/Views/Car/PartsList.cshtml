@model CarPartsModel

<h1>Car: @Model.Car.Make - @Model.Car.Model</h1>
<h2>Traveled distance: @Model.Car.TraveledDistance.ToString("F0")</h2>
<h3>Parts</h3>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Price</th>
    </tr>
    @foreach (var part in Model.Parts)
    {
        <tr>
            <td>@part.Name</td>
            <td>$@part.Price.ToString("F2")</td>
        </tr>
    }
</table>
